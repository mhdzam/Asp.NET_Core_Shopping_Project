@page
@model ShopUI.Pages.CartModel
@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>



<div>
    @foreach (var product in Model.Cart)
    {
        <p>@product.Name</p>
        <p>@product.Value</p>
        <p>@product.Qty</p>
        <p>@product.StockId</p>
        <hr />
    }

</div>

<vc:cart view="Small"></vc:cart>
